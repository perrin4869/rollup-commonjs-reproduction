{
    "compilerOptions": {
        "module": "commonjs",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "lib": ["es2017", "es2019", "es2020", "DOM"],
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es2020",
        "sourceRoot": "/",
        "typeRoots": ["./node_modules/@types", "typings"]
    },
    "exclude": ["**/node_modules"],
    "include": ["**/src/**/*"]
}
